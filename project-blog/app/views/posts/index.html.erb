<h1>Displaying All Posts</h1>
<%= link_to "My Blog", controller: "posts" %>
<%= link_to "New Post", new_post_path %>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
		</tr>
	</tbody>
	<% end %>
</table>